<% provide(:title, "Edit user") %>
<% provide(:button_text, "Save these personal info changes") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= render "form" %>
  </br>
  <hr>
  <h1>Update your Bio</h1>

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label "Change my 'About me' page" %>
    <%= f.text_area :about, as: :text, class: 'form-control', :rows => '6' %>
    <%= f.submit "Save my new bio", class: 'btn btn-primary' %>
  <% end %>
  </br>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel='noopener'>Change Gravatar</a>
    </div>
  </div>
</div>